<div class="container">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <div class="bg-success"> <%= devise_error_messages! %></div>

      <div class="field">
        <%= f.label :First_Name %><br />
        <%= f.text_field :fname, autofocus: true,required: true %>
      </div>

      <div class="field">
        <%= f.label :Last_Name %><br />
        <%= f.text_field :lname, required: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :Mobile %><br />
        <%= f.text_field :mobile, required: true, :pattern => "[789][0-9]{9}", :minlength =>10, :maxlength => 10 %>
      </div>
      
      <div class="field">
        <%= f.label :State %><br />
        <%= f.text_field :state, required: true %>
      </div>
      
      <div class="field">
        <%= f.label :District %><br />
        <%= f.text_field :district, required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>