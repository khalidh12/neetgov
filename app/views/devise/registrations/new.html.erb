  <div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <div class="ibox-content text-center">
    <h1 class="text-center"><b>Registraion</b></h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <div class="bg-success"> <%= devise_error_messages! %></div>

      <div class="field">
        <%= f.label :First_Name %><br />
        <%= f.text_field :fname, autofocus: true,required: true %>
      </div>

      <div class="field">
        <%= f.label :Last_Name %><br />
        <%= f.text_field :lname, required: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", required: true,:placeholder => "8 characters minimum" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true, :placeholder => "8 characters minimum" %>
      </div>

      <div class="field">
        <%= f.label :Mobile %><br />
        <%= f.text_field :mobile, required: true, :pattern => "[789][0-9]{9}", :minlength =>10, :maxlength => 10 %>
      </div>
      
      <div class="field">
        <%= f.label :State %><br />
        <%= f.select :state, ['Andhra Pradesh', 'Telangana'], required: true, :class => "dropdown dropdown-toggle" %>
      </div>
      
      <div class="field box AP">
        <%= f.label :District %><br />
        <%= f.select :apdistrict,["Anantapur","Chittoor","East Godavari","Guntur","Kadapa","Krishna","Kurnool","Prakasam","Nellore","Srikakulam","Vishakhapatnam","Vizianagaram","West Godavari"], :prompt => "Select District"  %>
      </div>

      <div class="field box TS">
        <%= f.label :District %><br />
        <%= f.select :tsdistrict, ["Adilabad","Hyderabad","Karimnagar", "Khammam","Mahaboob Nagar", "Medak","Nalgonda","Ranga Reddy","Sanga Reddy","Warangal"], :prompt => "Select District" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Sign up", :class => "btn btn-primary m-b" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>
 <div class="col-sm-4"></div>
</div>
<script>
$(document).ready(function(){
    $(".box").hide();
    $("select").change(function(){
      var optionValue = $(this).val();
      if(optionValue == "Andhra Pradesh"){
        $(".AP").show();
        $(".TS").hide();

      } else if(optionValue == "Telangana") {
        $(".AP").hide();
        $(".TS").show();
      }     
    }).change();
});

</script>